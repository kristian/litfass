#!/usr/bin/env node

const litfass = require('../litfass');

// register a event listener starting to litfaÃŸ, as soon as the server is started
process.on('litfass::serverStarted', addr => {
  litfass.start(`http://localhost:${addr.port}/`).catch(err => {
    console.error(err);
    process.exit(1);
  });
});

// start the server on the port specified
require('./www');
